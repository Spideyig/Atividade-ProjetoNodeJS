<div class="container text-center">
    <div class="row">
        <div class="col-1">
            &nbsp;
        </div>
        <div class="col bg-primary">
            <nav class="navbar bg-primary navbar-expand-lg" data-bs-theme="dark">
                <div class="container-fluid">
                    <a class="navbar-brand" href="#">SISTEMA DA PLATAFORMA</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                        data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false"
                        aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
                        <div class="navbar-nav">
                            <a class="nav-link active" aria-current="page" href="/">Cadastrar</a>
                            <a class="nav-link" href="/consulta">Consultar</a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
        <div class="col-1">
            &nbsp;
        </div>
    </div>
    <div class="row">
        <div class="col-1">
            &nbsp;
        </div>
        <div class="col bg-white">
            &nbsp;
        </div>
        <div class="col-1">
            &nbsp;
        </div>
    </div>
    <div class="row">
        <div class="col-1">
            &nbsp;
        </div>
        <div class="col bg-white">
            <p class="text-start fs-5">Cadastrar - Clientes</p>
            <p class="text-start fs-6">Cadastro de Clientes da plataforma.</p>
            <p>
            <div class="container text-center">
                <div class="row bg-primary">
                    <div class="col text-light">
                        Nome
                    </div>
                    <div class="col text-light">
                        Endereço
                    </div>
                    <div class="col text-light">
                        Bairro
                    </div>
                    <div class="col text-light">
                        Cep
                    </div>
                    <div class="col text-light">
                        Cidade
                    </div>
                    <div class="col text-light">
                        Estado
                    </div>
                    <div class="col text-light">
                        Observação
                    </div>
                </div>
                {{#each post}}
                    {{#dataValues}}
                    <div class="row">
                        <div class="col">
                            {{nome}}
                        </div>
                        <div class="col">
                            {{endereco}}
                        </div>
                        <div class="col">
                            {{bairro}}
                        </div>
                        <div class="col">
                            {{cep}}
                        </div>
                        <div class="col">
                            {{cidade}}
                        </div>
                        <div class="col">
                            {{estado}}
                        </div>
                        <div class="col">
                            {{observacao}}
                        </div>
                    </div>
                    {{/dataValues}}
                {{/each}}
            </div>
            </p>
        </div>
        <div class="col-1">
            &nbsp;
        </div>
    </div>
</div>